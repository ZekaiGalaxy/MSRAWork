# height
<height>  200 

# define nodes
<node0>  (0 ,0 )
<node1>  (0 ,150 )
<node2>  (1 ,-1 )
<node3>  (1 ,1 )
<node4>  (-1 ,1 )
<node5>  (-1 ,0 )

# draw face
<face> 
    <loop type="outer" >
        <Line>  <node0>  <node1> 
        <Line>  <node1>  <node2> 
        <Line>  <node2>  <node3> 
        <Line>  <node3>  <node4> 
        <Line>  <node4>  <node5> 
        <Line>  <node0>  <node5> 
    </loop> 
</face>